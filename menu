PROMPT_DIRTRIM=2
PS1='\[\033[01;32m\]\u@\h\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]\$ '
PS1='${BOLD}${BLUE}‚ï≠‚îÄ‚îÄ[ ${GREEN}${USER}@${CYAN}$(basename "$PWD") ]\n${BLUE}‚ï∞‚îÄ‚îÄ>${RESET} '
e="nano"
USER_NAME="Lucifer"
BOLD=$(tput bold)
RESET=$(tput sgr0)
RED=$(tput setaf 196)
GREEN=$(tput setaf 24)
YELLOW=$(tput setaf 226)
BLUE=$(tput setaf 21)
CYAN=$(tput setaf 51)
WHITE=$(tput setaf 195)

if ! shopt -oq posix; then
    if [ -f /data/data/com.termux/files/usr/share/bash-completion/less_completion ]; then
