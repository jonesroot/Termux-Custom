la_cmd() {
    local dirname=$(basename "$PWD")
    echo -e "${BOLD}${CYAN}‚îå‚îÄ‚îÄ üìÇ Directory -\n${CYAN}‚îî‚îÄ ${YELLOW}$dirname${RESET}"
    eza --icons=always -T --level=1 --group-directories-first -a -w "$(tput cols)"
}
